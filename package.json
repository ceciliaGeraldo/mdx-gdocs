{
  "name": "mdx-gdocs-mcp-server",
  "version": "1.0.0",
  "description": "MCP server for converting documents to MDX format with Docusaurus components and GitHub integration",
  "type": "module",
  "main": "build/index.js",
  "bin": {
    "mdx-gdocs-mcp": "./build/index.js",
    "mdx-gdocs": "./build/gemini-cli.js"
  },
  "scripts": {
    "build": "tsc && chmod 755 build/index.js && chmod 755 build/gemini-cli.js",
    "dev": "tsx src/index.ts",
    "start": "node build/index.js",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "document-conversion",
    "mdx",
    "docusaurus",
    "github",
    "ai",
    "gemini"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@google/generative-ai": "^0.22.0",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "commander": "^14.0.0",
    "dotenv": "^16.4.5",
    "mammoth": "^1.8.0",
    "octokit": "^4.0.2",
    "readline": "^1.3.0",
    "turndown": "^7.2.0",
    "turndown-plugin-gfm": "^1.0.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/turndown": "^5.0.4",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.4",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "files": [
    "build",
    "README.md"
  ]
}
